{
  "private": true,
  "name": "collaborative-whiteboard",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --parallel --filter ./apps/* dev",
    "build": "pnpm --filter ./apps/* build",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "pnpm exec tsc --noEmit -b packages/*"
  },
  "devDependencies": {
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.1"
  }
}
